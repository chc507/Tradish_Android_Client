<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.vanne.tradish_alpha.Layout.CheckableRelativeLayout
        android:id="@+id/Selected"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:padding="6dp">

        <ImageView
            android:id="@+id/icons"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignTop="@+id/priceView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="7dp" />

        <TextView
            android:id="@+id/options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:padding="2dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/descriptions"
            android:layout_alignStart="@+id/descriptions" />

        <TextView
            android:id="@+id/descriptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/options"
            android:layout_marginStart="22dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/icons"
            android:padding="2dp"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/priceView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="TextView"
            android:textSize="14sp"
            android:layout_alignBaseline="@+id/options"
            android:layout_alignBottom="@+id/options"
            android:layout_alignParentEnd="true" />

    </com.example.vanne.tradish_alpha.Layout.CheckableRelativeLayout>
</LinearLayout>
