<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.vanne.tradish_alpha.Layout.CheckableRelativeLayout
        android:id="@+id/Selected"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:padding="6dp">

        <ImageView
            android:id="@+id/icons"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignTop="@+id/priceView"
            android:layout_marginStart="7dp" />

        <TextView
            android:id="@+id/options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/descriptions"
            android:layout_toEndOf="@+id/descriptions"
            android:padding="2dp"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/descriptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/options"
            android:layout_marginStart="25dp"
            android:layout_marginTop="9dp"
            android:layout_toEndOf="@+id/icons"
            android:padding="2dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/businesshour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="false"
            android:layout_alignTop="@+id/descriptions"
            android:layout_marginEnd="0dp"
            android:text="TextView"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/priceLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/descriptions"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="false"
            android:text="TextView"
            android:textSize="14sp" />

    </com.example.vanne.tradish_alpha.Layout.CheckableRelativeLayout>
</LinearLayout>
